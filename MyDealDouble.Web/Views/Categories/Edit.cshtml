@model MyDealDouble.Web.viewModels.CategoriesViewModel

<div class="modal-header">
	<h5 class="modal-title" id="exampleModalLongTitle">Edit Category</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<form id="editForm" action="/Categories/Edit" method="post">

	<div class="modal-body">
		<div>
			<input name="ID" class="form-control" value="@Model.category.ID" type="hidden" />
		</div>
		<div class="form-group">
			@Html.Label("Category Name :")
			<input name="Name" class="form-control" value="@Model.category.Name" />
		</div>
		<div class="form-group">
			@Html.Label("Description:")
			<input name="Description" class="form-control" value="@Model.category.Description" />
		</div>

		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			<button type="button" id="saveButton" class="btn btn-outline-success">Save Category</button>
		</div>
	</div>
</form>

<script>

	$("#saveButton").click(function () {

		$.ajax({
			url: "@Url.Action("Edit","Categories")",
			type: "post",
			data: $("#editForm").serialize()
		}).done(function (response) {

			$("#listingArea").html(response);
			$("#modalCartegories").modal('toggle');

		});
	});

</script>