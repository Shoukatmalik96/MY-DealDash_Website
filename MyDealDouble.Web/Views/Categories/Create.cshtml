
<div class="modal-header">
	<h5 class="modal-title" id="exampleModalLongTitle">Create Category</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<form id="CreateForm" action="/Categories/Create" method="post">

	<div class="modal-body">
		<div class="form-group">
			<label>Category Name:</label>
			<input name="Name" class="form-control" />
		</div>
		<div class="form-group">
			<label>Description:</label>
			<input name="Description" class="form-control" />
		</div>

		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			<button type="button" id="saveButton" class="btn btn-outline-success">Save Category</button>
		</div>
	</div>
</form>

<script>

	

	$("#saveButton").click(function () {

		$.ajax({

			url: "@Url.Action("Create", "Categories")",
			type: "post",
			data: $("#CreateForm").serialize()

		}).done(function (response) {

			$('#modalCartegories').modal('toggle');
			$("#listingArea").html(response);
			
		});

	});
</script>
