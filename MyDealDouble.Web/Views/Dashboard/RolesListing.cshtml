@model MyDealDouble.Web.viewModels.RolesListingViewModel
@{
	ViewBag.Title = "RolesListing";
}

<h2>RolesListing</h2>

<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Role</th>
			<th>Users</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Roles != null && Model.Roles.Count > 0)
		{
			foreach (var role in Model.Roles)
			{
				<tr>
					<td>@role.Id</td>
					<td>@role.Name</td>
					@*<td>@role.Users.i</td>
					<td>@string.Join(", ", user.Roles.Select(x => x.RoleId))</td>*@
					@*<td>
						<input type="hidden" value="@user.Id" />
						<Button class="moreButton btn btn-primary" data-id="@user.Id" data-toggle="modal" data-target="#formModal"><i class="fas fa-edit"></i>  More Details</Button>
					</td>*@
				</tr>
			}
		}
		else
		{
			<tr>
				<td class="text-center" colspan="7">
					No Result Found.
				</td>
			</tr>
		}
	</tbody>
</table>

@if (Model.Pager != null && Model.Pager.TotalPages > 0)
{
	<nav aria-label="Page navigation example">
		<ul class="pagination justify-content-center">

			@if (Model.Pager.CurrentPage == 1)
			{
				<li class="page-item disabled">
					<a class="page-link" href="#">Previous</a>
				</li>
			}
			else
			{
				<li class="page-item">
					<a class="page-link" href="@Url.Action("Users", "Dashboard", new { pageNo = Model.Pager.CurrentPage - 1, roleID = Model.RoleID, searchTerm = Model.SearchTerm })">Previous</a>
				</li>
			}

			@for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
			{
				var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;

				<li class="page-item @active">
					<a class="page-link" href="@Url.Action("Users", "Dashboard", new { pageNo = page, roleID = Model.RoleID, searchTerm = Model.SearchTerm })">
						@page
					</a>
				</li>
			}

			@if (Model.Pager.CurrentPage == Model.Pager.EndPage)
			{
				<li class="page-item disabled">
					<a class="page-link" href="#">Next</a>
				</li>
			}
			else
			{
				<li class="page-item">
					<a class="page-link" href="@Url.Action("Users", "Dashboard", new { pageNo = Model.Pager.CurrentPage + 1, roleID = Model.RoleID, searchTerm = Model.SearchTerm })">Next</a>
				</li>
			}

		</ul>
	</nav>
}
